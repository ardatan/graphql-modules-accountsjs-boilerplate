{
  "name": "graphql-modules-accountsjs-server",
  "version": "1.0.0",
  "description": "GraphQL-Modules AccountsJS Boilerplate",
  "main": "src/index.ts",
  "repository": "https://github.com/ardatan/graphql-modules-accountsjs-boilerplate",
  "author": "Arda TANRIKULU",
  "license": "MIT",
  "scripts": {
    "generate": "gql-gen --config ./codegen.yml",
    "generate:watch": "nodemon --exec yarn generate -e graphql",
    "start:server": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:server:watch": "nodemon --exec yarn start:server -e ts",
    "dev": "concurrently \"yarn generate:watch\" \"yarn start:server:watch\"",
    "start": "yarn generate && yarn start:server",
    "build": "tsc"
  },
  "dependencies": {
    "@accounts/database-manager": "0.6.0",
    "@accounts/graphql-api": "0.6.0",
    "@accounts/mongo": "0.6.0",
    "@accounts/password": "0.6.0",
    "@accounts/server": "0.6.0",
    "@graphql-modules/core": "0.2.3",
    "@graphql-modules/epoxy": "0.2.3",
    "@graphql-modules/sonar": "0.2.3",
    "@types/mongodb": "3.1.14",
    "apollo-server": "2.2.2",
    "graphql": "0.13.2",
    "graphql-code-generator": "0.14.0",
    "graphql-codegen-typescript-mongodb": "0.14.0",
    "graphql-codegen-typescript-resolvers": "0.14.0",
    "graphql-codegen-typescript-server": "0.14.0",
    "mongodb": "3.1.9",
    "reflect-metadata": "0.1.12",
    "ts-node": "7.0.1",
    "tsconfig-paths": "3.7.0",
    "typescript": "3.1.6"
  },
  "devDependencies": {
    "concurrently": "4.0.1",
    "nodemon": "1.18.6"
  }
}
